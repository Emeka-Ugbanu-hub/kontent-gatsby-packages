{
  "name": "@simply007org/gatsby-kontent-packages",
  "version": "0.2.0",
  "description": "Monorepo containing Kentico Kontent packages for Gatsbyjs.",
  "repository": "https://github.com/Simply007/gatsby-kontent-packages.git",
  "author": {
    "name": "Ond≈ôej Chrastina",
    "email": "chrastina.ondra@gmail.com",
    "url": "https://ondrej.chrastina.tech"
  },
  "license": "MIT",
  "workspaces": [
    "packages/gatsby-source-kontent-items",
    "packages/gatsby-source-kontent-types",
    "site"
  ],
  "scripts": {
    "build:site": "yarn workspace @simply007org/gatsby-starter-kontent-lumen build",
    "develop:site": "yarn workspace @simply007org/gatsby-starter-kontent-lumen develop",
    "watch:items": "yarn workspace @simply007org/gatsby-source-kontent-items watch",
    "watch:types": "yarn workspace @simply007org/gatsby-source-kontent-items watch",
    "watch:packages": "run-p watch:items watch:types",
    "build:packages": "yarn workspace @simply007org/gatsby-source-kontent-items build && yarn workspace @simply007org/gatsby-source-kontent-types build",
    "prepare": "yarn build:packages",
    "test": "yarn workspaces run test"
  },
  "private": true,
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
